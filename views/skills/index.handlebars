{{#each skills}}
<div class="half">
  <div class="card card-body mb-2">
    <h4>{{title}}</h4>
    <p>{{details}}</p>
    <a class="btn btn-dark btn-block mb-2" href="/skills/edit/{{id}}">Edit</a>
    <form method="post" action="/skills/{{id}}?_method=DELETE">
      <input type="hidden" name="_method" value="DELETE">
      <input type="submit" class="btn btn-danger btn-block" value="Delete">
    </form>
  </div>
</div>

{{else}}
<p>No Skills Currently Being Picked Up</p>
{{/each}}